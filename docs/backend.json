
{
  "entities": {
    "Account": {
      "title": "Account",
      "description": "Represents a user account in the system.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the account."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "username": {
          "type": "string",
          "description": "The user's unique username."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "state": {
          "type": "string",
          "description": "The two-letter state abbreviation for the user's location."
        },
        "balances": {
          "type": "object",
          "properties": {
            "gold": {
              "type": "number"
            },
            "sweeps": {
              "type": "number"
            }
          }
        },
        "playHistory": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Play"
          }
        },
        "friendIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "riderNumber": {
          "type": "string"
        },
        "mxhubStanding": {
          "type": "number"
        },
        "isAdmin": {
          "type": "boolean",
          "description": "Determines if the user has administrative privileges."
        }
      },
      "required": ["name", "username", "email", "balances"]
    },
    "Play": {
      "title": "Play",
      "description": "Represents a play made by a user.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "race": { "type": "string" },
        "raceId": { "type": "string" },
        "playType": {
          "type": "string",
          "enum": ["Race Winner", "Holeshot", "Championship Winner"]
        },
        "raceType": {
          "type": "string",
          "enum": ["Main Event", "Heat 1", "Heat 2", "Heat 3"]
        },
        "opponent": { "type": "string" },
        "opponentId": { "type": "string" },
        "date": { "type": "string" },
        "amount": { "type": "number" },
        "coinType": {
          "type": "string",
          "enum": ["Gold Coins", "Sweeps Coins"]
        },
        "status": {
          "type": "string",
          "enum": ["Won", "Lost", "Pending"]
        },
        "userRider": { "type": "string" },
        "opponentRider": { "type": "string" }
      }
    },
    "ExchangeRequest": {
      "title": "Exchange Request",
      "description": "Represents a request to exchange coins.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "accountId": { "type": "string" },
        "accountName": { "type": "string" },
        "amount": { "type": "number" },
        "date": { "type": "string" },
        "status": { "type": "string", "enum": ["Pending", "Approved", "Rejected"] },
        "type": { "type": "string", "enum": ["Gold Coin", "Sweeps Coin"] }
      },
      "required": ["accountId", "accountName", "amount", "date", "status", "type"]
    },
    "GoldCoinPurchase": {
      "title": "Gold Coin Purchase",
      "description": "Represents a record of a user purchasing Gold Coins.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "packageId": { "type": "string" },
        "amount": { "type": "number" },
        "price": { "type": "number" },
        "date": { "type": "string" },
        "status": { "type": "string", "enum": ["Completed", "Refund Requested", "Refunded"] }
      },
      "required": ["userId", "packageId", "amount", "price", "date", "status"]
    },
    "SettlementRecord": {
      "title": "Settlement Record",
      "description": "Represents a record of an automatic or manual play settlement process.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "settledPlays": { "type": "number" },
        "updatedAccounts": { "type": "number" },
        "triggeredBy": { "type": "string" }
      },
      "required": ["date", "settledPlays", "updatedAccounts", "triggeredBy"]
    },
    "Rider": {
      "title": "Rider",
      "description": "Represents a motocross/supercross rider.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "team": { "type": "string" },
        "number": { "type": "string" },
        "class": { "type": "string", "enum": ["450cc", "250cc"] },
        "location": { "type": "string" },
        "dob": { "type": "string" },
        "turnedPro": { "type": "string" },
        "accomplishments": { "type": "array", "items": { "type": "string" } },
        "videos": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name", "number", "class", "team"]
    },
    "Race": {
      "title": "Race",
      "description": "Represents a race event.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "track": { "type": "string" },
        "location": { "type": "string" },
        "date": { "type": "string" },
        "time": { "type": "string" },
        "series": { "type": "string", "enum": ["Supercross", "Motocross", "Playoffs", "World Supercross"] },
        "division": { "type": "string", "enum": ["East", "West", "East/West Showdown"] },
        "format": { "type": "string", "enum": ["Triple Crown"] },
        "round": { "type": "number" },
        "tv": { "type": "string" },
        "raceDayLive": { "type": "string" }
      },
      "required": ["name", "date", "series"]
    },
    "RaceResult": {
      "title": "RaceResult",
      "description": "Stores the results for a single race event. The document ID should match the race ID.",
      "type": "object",
      "properties": {},
      "patternProperties": {
        "^(450|250|450_heat1|450_heat2|250_heat1|250_heat2)$": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pos": { "type": "number" },
              "rider": { "type": "string" },
              "number": { "type": "string" },
              "bike": { "type": "string" },
              "points": { "type": "number" },
              "holeshot": { "type": "boolean" },
              "finishes": { "type": "string" }
            },
            "required": ["pos", "rider", "number", "bike"]
          }
        }
      }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/accounts/{accountId}": {
      "schema": { "$ref": "#/entities/Account" },
      "description": "Stores user account information."
    },
    "/exchangeRequests/{requestId}": {
      "schema": { "$ref": "#/entities/ExchangeRequest" },
      "description": "Stores all coin exchange requests from users."
    },
    "/goldCoinPurchases/{purchaseId}": {
        "schema": { "$ref": "#/entities/GoldCoinPurchase" },
        "description": "Stores all Gold Coin purchases made by users."
    },
    "/settlementRecords/{recordId}": {
      "schema": { "$ref": "#/entities/SettlementRecord" },
      "description": "Stores records of each play settlement execution."
    },
    "/riders/{riderId}": {
      "schema": { "$ref": "#/entities/Rider" },
      "description": "Stores individual rider profiles."
    },
    "/races/{raceId}": {
      "schema": { "$ref": "#/entities/Race" },
      "description": "Stores race event information."
    },
    "/raceResults/{raceId}": {
      "schema": { "$ref": "#/entities/RaceResult" },
      "description": "Stores results for each race, with the document ID matching the race ID."
    }
  }
}
