
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read access for all authenticated users
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // A user can only write to their own account document
    match /accounts/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for exchange requests
    match /exchangeRequests/{requestId} {
      // Any authenticated user can create a request, but only for their own accountId
      allow create: if request.auth != null && request.resource.data.accountId == request.auth.uid;
      
      // For now, allow any authenticated user to read, update, or delete requests.
      // This enables the admin panel functionality.
      // TODO: In production, restrict update/delete to admin roles.
      allow read, update, delete: if request.auth != null;
    }
  }
}
