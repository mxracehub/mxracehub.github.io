
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Accounts Collection
    match /accounts/{userId} {
      // Only authenticated users can view a user's public profile
      allow read: if request.auth != null;
      
      // Only the authenticated user can create or update their own document
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Exchange Requests Collection
    match /exchangeRequests/{requestId} {
      // A user can read their own requests. Admins would need a separate rule.
      allow read: if request.auth != null && request.auth.uid == resource.data.accountId;

      // A user can create a request for themselves.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.accountId;

      // Only allow admins (not yet implemented) to update status.
      // For now, we allow the user to update it to demonstrate functionality.
      allow update: if request.auth != null && request.auth.uid == resource.data.accountId;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
